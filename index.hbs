{{!< default}}
<div class="gh-outer">
    <main class="site-main gh-inner">
        <!-- Existing Hero Section -->
        <section id="hero" class="hero">
            <div class="hero-content">
                <h1 class="hero-title">Empower Your Marketing with AI</h1>
                <p class="hero-subtitle">Unlock creativity and efficiency with our AI-powered copywriting tools.</p>
                <a href="/signup/" class="hero-cta">Discover the future of content creation</a>
            </div>
            <canvas class="particles-js-canvas-el"></canvas>
        </section>
        <!-- Post Feed Section -->
        <div class="post-feed gh-feed">
            {{#foreach posts}}
                {{> "loop"}}
            {{/foreach}}
        </div>
        
        <div class="glide">
    <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
            {{#get "posts" filter="featured:true" limit="5"}}
                {{#foreach posts}}
                    <li class="glide__slide">
                        <a href="{{url}}">
                            <img src="{{feature_image}}" alt="{{title}}">
                            <h3>{{title}}</h3>
                        </a>
                        <p>{{custom_excerpt}}</p>
                    </li>
                {{/foreach}}
            {{/get}}
        </ul>
    </div>
</div>

</main>

</div>
